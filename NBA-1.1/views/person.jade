// Jade file to specify output of a persons list
// Inherits from layout
extend layout
block navbarcontent
    +nav_item("/","active") Sample Work
    +nav_item("/yourwork") Your Work
    +nav_item("/reference") Reference

block content
  p
    +icon-primary("search")
    |  #{title}:
  // Create a table with one row per result
  form(method="get", action="/person")
  p
    select(name = "name")
      - for (var inx = 0; inx < results.length; inx++)
        option #{results[inx].fullName}
    table
      - for (var inx = 0; inx < results.length; inx++)
        tr
          td=results[inx].firstName
          td &nbsp;
          td=results[inx].lastName
          td &nbsp;
          td=results[inx].playerId
          td &nbsp;
          td=results[inx].teamId
          td &nbsp;
          td=results[inx].fullName
          td &nbsp;&nbsp;
          td=results[inx].downcaseName
  // Put a click button that lets us return to the index page
  form(method='get', action='/')
      input(type='submit', value='Return')
